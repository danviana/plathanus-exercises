<%= form_with url: "/roman_numerals", method: :get do |form| %>
  <div class="container mt-5">
    <div class="row">
      <div class="col">
        <h3>Converter n√∫meros inteiros para numeral romano</h3>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-5">
        <label for="number" class="form-label">Numero inteiro</label>
        <div class="input-group mb-3">
          <input class="form-control" type="number" name="number" id="number" min="1" aria-describedby="button-addon" autofocus>
          <button class="btn btn-outline-dark" type="submit" id="button-addon">Converter</button>
        </div>

        <%= render partial: "layouts/flash", flash: flash %>

        <div class="card" style="height: 70px;">
          <div class="card-body text-center">
            <% if number.present? && converted_number.present? %>
              <h3><em><%= "#{number} = #{converted_number}" %></em></h3>
            <% else %>
              <h3><em>...</em></h3>
            <% end %>
          </div>
        </div>

        <div class="mt-3">
          <a href="/" class="btn btn-dark">Voltar</a>
        </div>
      </div>
    </div>
  </div>
<% end %>
